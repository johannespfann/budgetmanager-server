<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <property name="hibernate.current_session_context_class">thread</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Print executed SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- Drop and re-create all database on startup -->
        <!--<property name="hibernate.hbm2ddl.auto">create-drop</property>-->

        <!-- Annotated entity classes -->
        <mapping class="de.pfann.budgetmanager.server.common.model.Entry"/>
        <mapping class="de.pfann.budgetmanager.server.common.model.AppUser"/>
        <mapping class="de.pfann.budgetmanager.server.common.model.Tag"/>
        <mapping class="de.pfann.budgetmanager.server.common.model.RotationEntry"/>
        <mapping class="de.pfann.budgetmanager.server.common.model.Run"/>
        <mapping class="de.pfann.budgetmanager.server.common.model.RunInfo"/>
        <mapping class="de.pfann.budgetmanager.server.common.model.TagTemplate"/>
        <mapping class="de.pfann.budgetmanager.server.common.model.SubTotalEntry"/>
        <mapping class="de.pfann.budgetmanager.server.common.model.TagStatistic" />

    </session-factory>
</hibernate-configuration>